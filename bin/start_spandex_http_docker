#!/bin/bash

image="$1"
if [ -z "$image" ]; then
  echo "ERR >> Please supply a full image name as an argument to this script!"
  exit 1
fi

AWS_PROFILE=infrastructure docker run \
  -e CONFIG_LINE="-Dconfig.file=/etc/configs/application.conf" \
  -v "$(realpath $0)/../../configs":/etc/configs \
  -p 8042:8042 \
  "$image"
